{
  "name": "openclassrooms/code-generator",
  "description": "Library",
  "type": "library",
  "license": "proprietary",
  "authors": [
    {
      "name": "Samuel Gomis",
      "email": "samuel.gomis@external.openclassrooms.com"
    },
    {
      "name": "Romain Kuzniak",
      "email": "romain.kuzniak@openclassrooms.com"
    },
    {
      "name": "OpenClassrooms",
      "email": "tech@openclassrooms.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "OpenClassrooms\\CodeGenerator\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "OpenClassrooms\\CodeGenerator\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": ">=7.1",
    "doctrine/annotations": "~1.6",
    "doctrine/inflector": "~1.3",
    "fzaninotto/faker": "^1.8",
    "incenteev/composer-parameter-handler": "~2.0",
    "nesbot/carbon": "1.22.1 || ^2.6",
    "symfony/config": "~3.3",
    "symfony/console": "~3.3",
    "symfony/dependency-injection": "~3.3",
    "symfony/filesystem": "~3.3",
    "symfony/finder": "~3.3",
    "symfony/yaml": "~3.3",
    "twig/twig": "^1.34 || ^2.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "2.*",
    "phpunit/phpcov": "~4.0",
    "phpunit/phpunit": "~6.5"
  },
  "scripts": {
    "post-install-cmd": [
      "bash hooks/install.sh",
      "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters"
    ],
    "post-update-cmd": [
      "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters"
    ]
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0.x-dev"
    },
    "incenteev-parameters": {
      "file": "../../oc_code_generator.yml",
      "dist-file": "oc_code_generator.yml.dist"
    }
  },
  "bin": [
    "src/CodeGenerator.php"
  ]
}
