{% include "Header.php.twig" %}

namespace {{ skeletonModel.namespace }};

use {{ skeletonModel.useCaseResponseClassName }};

/**
 * @author {{ author }} <{{ authorEmail }}>
 */
trait {{ skeletonModel.shortName }}
{
    public function hydrateCommonFields({{ skeletonModel.viewModelShortName }} $vm, {{ skeletonModel.useCaseResponseShortName }} ${{ skeletonModel.useCaseResponseArgument }})
    {
{% for field in skeletonModel.fields | sortIdFirst %}
        $vm->{{ field.name }} = ${{ skeletonModel.useCaseResponseArgument}}->{{ field.accessor }}();
{% endfor %}
    }
}
