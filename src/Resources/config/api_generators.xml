<?xml version="1.0" ?>

<container xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://symfony.com/schema/dic/services" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>

        <service id="open_classrooms.code_generator.services.field_object_service" class="OpenClassrooms\CodeGenerator\Services\Impl\FieldObjectServiceImpl"/>
        <service id="open_classrooms.code_generator.repository.file_object_repository" class="OpenClassrooms\CodeGenerator\Repository\FileObjectRepository"/>
        <service id="open_classrooms.code_generator.file_objects.view_model_file_object_factory" class="OpenClassrooms\CodeGenerator\FileObjects\Impl\ViewModelFileObjectFactoryImpl"/>
        <service id="open_classrooms.code_generator.file_objects.use_case_response_file_object_factory" class="OpenClassrooms\CodeGenerator\FileObjects\Impl\UseCaseResponseFileObjectFactoryImpl"/>
        <service id="open_classrooms.code_generator.skeleton_models.view_model_test.view_model_test_skeleton_model_assembler" class="OpenClassrooms\CodeGenerator\SkeletonModels\ViewModelTest\Impl\ViewModelTestSkeletonModelAssemblerImpl"/>
        <service id="open_classrooms.code_generator.skeleton_models.api.view_model.view_model_skeleton_model_assembler" class="OpenClassrooms\CodeGenerator\SkeletonModels\Api\ViewModel\Impl\ViewModelSkeletonModelAssemblerImpl"/>
        <service id="open_classrooms.code_generator.skeleton_models.api.view_model_detail.view_model_detail_skeleton_model_assembler" class="OpenClassrooms\CodeGenerator\SkeletonModels\Api\ViewModelDetail\Impl\ViewModelDetailSkeletonModelAssemblerImpl"/>

        <service id="open_classrooms.code_generator.generator.api.abstract_view_model_generator" class="OpenClassrooms\CodeGenerator\Generator\Api\AbstractViewModelGenerator" abstract="true">
            <call method="setFieldObjectService">
                <argument type="service" id="open_classrooms.code_generator.services.field_object_service"/>
            </call>
            <call method="setFileObjectGateway">
                <argument type="service" id="open_classrooms.code_generator.repository.file_object_repository"/>
            </call>
            <call method="setTemplating">
                <argument type="service" id="templating"/>
            </call>
            <call method="setUseCaseResponseFileObjectFactory">
                <argument type="service" id="open_classrooms.code_generator.file_objects.use_case_response_file_object_factory"/>
            </call>
            <call method="setViewModelFileObjectFactory">
                <argument type="service" id="open_classrooms.code_generator.file_objects.view_model_file_object_factory"/>
            </call>
        </service>

        <service id="open_classrooms.code_generator.generator.api.view_models.view_model_generator" class="OpenClassrooms\CodeGenerator\Generator\Api\ViewModels\ViewModelGenerator" parent="open_classrooms.code_generator.generator.api.abstract_view_model_generator">
            <call method="setViewModelSkeletonModelAssembler">
                <argument type="service" id="open_classrooms.code_generator.skeleton_models.api.view_model.view_model_skeleton_model_assembler"/>
            </call>
        </service>

        <service id="open_classrooms.code_generator.generator.api.view_models_detail.view_model_detail_generator " class="OpenClassrooms\CodeGenerator\Generator\Api\ViewModelsDetail\ViewModelDetailGenerator" parent="open_classrooms.code_generator.generator.api.abstract_view_model_generator">
            <call method="setViewModelDetailSkeletonModelAssembler">
                <argument type="service" id="open_classrooms.code_generator.skeleton_models.api.view_model_detail.view_model_detail_skeleton_model_assembler"/>
            </call>
        </service>

        <service id="open_classrooms.code_generator.generator.tests.api.view_models.view_model_test_generator" class="OpenClassrooms\CodeGenerator\Generator\Tests\Api\ViewModels\ViewModelTestGenerator" parent="open_classrooms.code_generator.generator.api.abstract_view_model_generator">
            <call method="setViewModelTestSkeletonModelAssembler">
                <argument type="service" id="open_classrooms.code_generator.skeleton_models.view_model_test.view_model_test_skeleton_model_assembler"/>
            </call>
        </service>

    </services>
</container>
