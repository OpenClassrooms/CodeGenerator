<?xml version="1.0" ?>

<container xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://symfony.com/schema/dic/services" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>

        <service id="open_classrooms.code_generator.services.field_object_service" class="OpenClassrooms\CodeGenerator\Services\Impl\FieldObjectServiceImpl"/>
        <service id="open_classrooms.code_generator.repository.file_object_repository" class="OpenClassrooms\CodeGenerator\Repository\FileObjectRepository"/>
        <service id="open_classrooms.code_generator.file_objects.view_model_file_object_factory" class="OpenClassrooms\CodeGenerator\FileObjects\Impl\ViewModelFileObjectFactoryImpl"/>
        <service id="open_classrooms.code_generator.file_objects.use_case_response_file_object_factory" class="OpenClassrooms\CodeGenerator\FileObjects\Impl\UseCaseResponseFileObjectFactoryImpl"/>
        <service id="open_classrooms.code_generator.file_objects.entity_file_object_factory" class="OpenClassrooms\CodeGenerator\FileObjects\Impl\EntityFileObjectFactoryImpl"/>

        <service id="open_classrooms.code_generator.generator.abstract_generator" class="OpenClassrooms\CodeGenerator\Generator\AbstractGenerator" abstract="true">
            <call method="setFieldObjectService">
                <argument type="service" id="open_classrooms.code_generator.services.field_object_service"/>
            </call>
            <call method="setFileObjectGateway">
                <argument type="service" id="open_classrooms.code_generator.repository.file_object_repository"/>
            </call>
            <call method="setTemplating">
                <argument type="service" id="templating"/>
            </call>
        </service>

    </services>
</container>
